<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
        >


            <corners android:radius="50dp"/>
            <solid android:color="#FF0000"
            />

            <stroke android:color="#FFFFFF"
                    android:dashWidth="20dp" android:dashGap="10dp" android:width="5dp"/>

            <size android:width="100dp" android:height="50dp"/>
            <padding android:top="20dp" android:bottom="20dp"/>

        </shape>
    </item>

    <item>
        <shape android:shape="oval" >

            <size android:height="20dp" android:width="20dp"/>
            <gradient android:type="radial"
                      android:gradientRadius="900"
                      android:centerColor="#FF0000"
                      android:endColor="#D3C046"
                      android:startColor="#58C813"
            />
        </shape>
    </item>

</layer-list>